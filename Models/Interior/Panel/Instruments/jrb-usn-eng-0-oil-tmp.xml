<?xml version="1.0"?>
<PropertyList>

<path>jrb-usn-fuel-flow.ac</path>

<animation>
  <type>material</type>
  <object-name>FFNeedle</object-name>
  <object-name>FFFace</object-name>
  <emission>
  <red>   0.6 </red>
  <green> 0.3 </green>
  <blue>  0.3 </blue>
  <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
  </emission> 
</animation>


<animation>
	<type>rotate</type>
	<object-name>FFNeedle</object-name>
	<property>engines/engine[2]/fuel-flow-gph</property>
	<factor>0.12</factor>
	<min-deg>0</min-deg>
	<max-deg>300</max-deg>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<animation>
   <type>material</type>
   <object-name>FFFace</object-name>
   <property-base>controls/lighting/panel/emission</property-base>
   <emission>
      <red-prop>red</red-prop>
      <green-prop>green</green-prop>
      <blue-prop>blue</blue-prop>
   </emission>
</animation>

<animation>
   <type>material</type>
   <property-base>controls/lighting/instruments/emission</property-base>
   <emission>
      <red-prop>red</red-prop>
      <green-prop>green</green-prop>
      <blue-prop>blue</blue-prop>
   </emission>
</animation>

<animation>
	<type>noshadow</type>
</animation>

<animation>
	<type>alpha-test</type>
	<alpha-factor>0.05</alpha-factor>
</animation>

<animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

</PropertyList>
