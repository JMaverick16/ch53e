<?xml version="1.0"?>
<PropertyList>

<path>jrb-usn-alt.ac</path>

<animation>
	<type>noshadow</type>
</animation>

<animation>
	<type>alpha-test</type>
	<alpha-factor>0.01</alpha-factor>
</animation>

<animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

<!--animation>
	<type>range</type>
	<object-name>lowres</object-name>
	<min-m>0</min-m>
	<max-m>25</max-m>
</animation-->

<animation>
	<type>material</type>
	<property-base>controls/lighting/flight-instruments/emission</property-base>
	<emission>
		<red-prop>red</red-prop>
		<green-prop>green</green-prop>
		<blue-prop>blue</blue-prop>
	</emission>
</animation>

<animation>
  <type>material</type>
    <object-name>AltBevel</object-name>
	<object-name>AltNeedle</object-name>
	<object-name>100ft</object-name>
	<object-name>1000ft</object-name>
	<object-name>10000ft</object-name>
	<object-name>inhg1</object-name>
	<object-name>inhg2</object-name>
	<object-name>inhg3</object-name>
	<object-name>inhg4</object-name>
  <emission>
  <red>   0.6 </red>
  <green> 0.3 </green>
  <blue>  0.3 </blue>
  <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
  </emission> 
</animation>

<animation>
	<type>material</type>
	<object-name>AltBevel</object-name>
	<property-base>controls/lighting/panel/emission</property-base>
	<emission>
		<red-prop>red</red-prop>
		<green-prop>green</green-prop>
		<blue-prop>blue</blue-prop>
	</emission>
</animation>

<animation>
	<type>rotate</type>
	<object-name>AltNeedle</object-name>
	<property>instrumentation/altimeter/indicated-altitude-ft</property>
	<factor>-0.36</factor>
	<axis>
		<x>1</x>
	</axis>
</animation>

<animation>
	<type>textranslate</type>
	<object-name>100ft</object-name>
	<property>instrumentation/altimeter/indicated-altitude-ft</property>
	<factor>0.001</factor>
	<axis>
		<y>1</y>
	</axis>
</animation>

<animation>
	<type>textranslate</type>
	<object-name>1000ft</object-name>
	<property>instrumentation/altimeter/indicated-altitude-ft</property>
	<factor>0.0001</factor>
	<step>1000</step>
	<scroll>100</scroll>
	<axis>
		<y>1</y>
	</axis>
</animation>

<animation>
	<type>textranslate</type>
	<object-name>10000ft</object-name>
	<property>instrumentation/altimeter/indicated-altitude-ft</property>
	<factor>0.00001</factor>
	<step>100000</step>
	<scroll>1000</scroll>
	<axis>
		<y>1</y>
	</axis>
</animation>

<animation>
	<type>textranslate</type>
	<object-name>inhg1</object-name>
	<property>instrumentation/altimeter/setting-inhg</property>
	<factor>.01</factor>
	<step>10</step>
	<scroll>0</scroll>
	<axis>
		<y>1</y>
	</axis>
</animation>

<animation>
	<type>textranslate</type>
	<object-name>inhg2</object-name>
	<property>instrumentation/altimeter/setting-inhg</property>
	<factor>0.1</factor>
	<step>1</step>
	<scroll>0</scroll>
	<axis>
		<y>1</y>
	</axis>
</animation>

<animation>
	<type>textranslate</type>
	<object-name>inhg3</object-name>
	<property>instrumentation/altimeter/setting-inhg</property>
	<factor>1</factor>
	<step>0.1</step>
	<scroll>0</scroll>
	<axis>
		<y>1</y>
	</axis>
</animation>

<animation>
	<type>textranslate</type>
	<object-name>inhg4</object-name>
	<property>instrumentation/altimeter/setting-inhg</property>
	<factor>10</factor>
	<step>0.01</step>
	<scroll>0</scroll>
	<axis>
		<y>1</y>
	</axis>
</animation>

