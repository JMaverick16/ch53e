<?xml version="1.0"?>
<PropertyList>

<path>jrb-usn-hyd-psi.ac</path>

<animation>
  <type>material</type>
  <object-name>HydPSINeedle</object-name>
  <object-name>HydPSIFace</object-name>
  <emission>
  <red>   0.6 </red>
  <green> 0.3 </green>
  <blue>  0.3 </blue>
  <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
  </emission> 
</animation>

<animation>
	<type>rotate</type>
	<object-name>HydPSINeedle</object-name>
	<property>systems/hydraulic/system[0]/stage[1]/psi</property>
	<axis>
		<y>-1</y>
	</axis>
</animation>

<animation>
	<type>noshadow</type>
</animation>

<animation>
	<type>alpha-test</type>
	<alpha-factor>0.01</alpha-factor>
</animation>

<animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

<animation>
	<type>material</type>
	<property-base>controls/lighting/instruments/emission</property-base>
	<emission>
		<red-prop>red</red-prop>
		<green-prop>green</green-prop>
		<blue-prop>blue</blue-prop>
	</emission>
</animation>

<animation>
	<type>material</type>
	<object-name>HydPSIFace</object-name>
	<property-base>controls/lighting/panel/emission</property-base>
	<emission>
		<red-prop>red</red-prop>
		<green-prop>green</green-prop>
		<blue-prop>blue</blue-prop>
	</emission>
</animation>

</PropertyList>
