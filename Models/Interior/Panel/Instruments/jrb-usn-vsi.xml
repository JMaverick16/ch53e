<?xml version="1.0"?>
<PropertyList>

<path>jrb-usn-vsi.ac</path>

<animation>
  <type>material</type>
  <object-name>VVIBevel</object-name>
  <object-name>VVINeedle</object-name>
  <emission>
  <red>   0.6 </red>
  <green> 0.3 </green>
  <blue>  0.3 </blue>
  <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
  </emission> 
</animation>

<animation>
   <type>noshadow</type>
</animation>

<animation>
   <type>alpha-test</type>
   <alpha-factor>0.05</alpha-factor>
</animation>

<animation>
   <type>range</type>
   <min-m>0</min-m>
   <max-m>5</max-m>
</animation>

<!--animation>
   <type>range</type>
   <object-name>lowres</object-name>
   <min-m>0</min-m>
   <max-m>25</max-m>
</animation-->

<animation>
   <type>material</type>
   <property-base>controls/lighting/flight-instruments/emission</property-base>
   <emission>
      <red-prop>red</red-prop>
      <green-prop>green</green-prop>
      <blue-prop>blue</blue-prop>
   </emission>
</animation>

<animation>
   <type>material</type>
   <object-name>VVIBevel</object-name>
   <property-base>controls/lighting/panel/emission</property-base>
   <emission>
      <red-prop>red</red-prop>
      <green-prop>green</green-prop>
      <blue-prop>blue</blue-prop>
   </emission>
</animation>

<animation>
	<type>rotate</type>
	<object-name>VVINeedle</object-name>
	<property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
	<interpolation>
		<entry> <ind>-6000</ind> <dep>-169</dep> </entry>
		<entry> <ind>-2000</ind> <dep>-87</dep> </entry>
		<entry> <ind>-1000</ind> <dep>-64</dep> </entry>
		<entry> <ind>0</ind> <dep>0</dep> </entry>
		<entry> <ind>1000</ind> <dep>64</dep> </entry>
		<entry> <ind>2000</ind> <dep>87</dep> </entry>
		<entry> <ind>6000</ind> <dep>169</dep> </entry>
	</interpolation>
	<axis>
		<x>-1</x>
	</axis>
</animation>

</PropertyList>
