<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <!-- nav lights -->
  <!-- green and red navigation lights, usually mounted on the wingtips -->
  <!-- note: default orientation is up -->
  <model>
    <name>GreenLight</name>
    <path>Aircraft/ch53e/Models/Lights/GreenLight.xml</path>
    <offsets>
      <x-m>0.85</x-m>
      <y-m>3.55</y-m>
      <z-m>0.5</z-m>
      <roll-deg>-90</roll-deg>
      <pitch-deg>-5</pitch-deg> <!-- due to roll, this tunes heading - I want it to point 5 deg more forward -->
    </offsets>
  </model>
  <model>
    <name>RedLight</name>
    <path>Aircraft/ch53e/Models/Lights/RedLight.xml</path>
    <offsets>
      <x-m>0.85</x-m>
      <y-m>-3.55</y-m>
      <z-m>0.5</z-m>
      <roll-deg>90</roll-deg>
      <pitch-deg>-5</pitch-deg> <!-- due to roll, this tunes heading - I want it to point 5 deg more forward -->
    </offsets>
  </model>
  
  <!-- beacon -->
